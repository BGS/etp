#ifndef _H_SQLITE_WRAPPER_INCLUDED__
#define _H_SQLITE_WRAPPER_INCLUDED__

namespace EPP_DB
{

    class SQLWrapper
    {
    public:
        enum SQLWrapperDBOpenMode
        {
            open_existing,
	    create_new,
	    open_or_create
        };
    
        SQLWrapper();
        virtual ~SQLWrapper();

        SQLWrapper& open( std::string sDB ) const;
        void close();
    
        static const  char* SQLiteVersion(void){ return SQLITE_VERSION; }

    
    private:
        void checkDB();

        sqlite* pSQLDb;
    
};

